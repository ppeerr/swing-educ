<databaseChangeLog xmlns='http://www.liquibase.org/xml/ns/dbchangelog'
                   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                   xsi:schemaLocation='http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd'>

    <changeSet id="00003" author="per">
        <createTable tableName="teachers">
            <column name="id" type="number">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar2(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00004" author="per">
        <createSequence sequenceName="teachers_seq"/>
    </changeSet>

    <changeSet id="00005" author="per">
        <createProcedure>
            CREATE TRIGGER teachers_bi BEFORE INSERT ON teachers
                FOR EACH ROW
                WHEN (new.id is null)
                BEGIN
                    SELECT teachers_seq.nextval INTO :new.id FROM DUAL;
                END;
        </createProcedure>
        <rollback>
            DROP TRIGGER teachers_bi
        </rollback>
    </changeSet>

</databaseChangeLog>